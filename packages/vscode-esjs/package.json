{
  "publisher": "enzonotario",
  "name": "vscode-esjs",
  "displayName": "EsJS (JavaScript con sintaxis en Espa√±ol)",
  "version": "0.1.1",
  "description": "Sintaxis y configuraciones para EsJS",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/es-js/esjs.git",
    "directory": "packages/vscode-esjs"
  },
  "author": "Enzo Notario <hi@enzonotario.me>",
  "license": "MIT",
  "keywords": [
    "esjs",
    "vscode"
  ],
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "browser": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode && pnpm run build:grammar",
    "build:grammar": "ts-node scripts/generate-grammars-configurations.ts",
    "dev": "nr build --watch",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/ni": "^0.17.2",
    "@es-js/core": "workspace:*",
    "@types/node": "^18.17.1",
    "@types/vscode": "^1.74.1",
    "@vscode/test-electron": "^2.3.3",
    "axios": "^1.4.0",
    "bumpp": "^8.2.1",
    "esno": "^0.16.3",
    "pnpm": "^7.33.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5",
    "vite": "^3.2.7",
    "vitest": "^2.1.5",
    "vsce": "^2.15.0",
    "vscode": "^1.1.37",
    "vscode-languageclient": "^8.1.0",
    "vscode-languageserver": "^8.1.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:esvue",
    "onLanguage:esjs"
  ],
  "contributes": {
    "languages": [
      {
        "id": "esvue",
        "extensions": [
          ".esvue"
        ],
        "configuration": "./languages/esvue-language-configuration.json"
      },
      {
        "id": "esjs",
        "extensions": [
          ".esjs"
        ],
        "configuration": "./languages/esjs-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "esvue",
        "scopeName": "source.esvue",
        "path": "./syntaxes/esvue.tmLanguage.json",
        "embeddedLanguages": {
          "source.esjs": "esjs",
          "source.esvue": "esvue",
          "text.html.basic": "html",
          "text.html.vue-html": "vue-html",
          "text.jade.slm": "slm",
          "text.pug": "jade",
          "text.haml": "haml",
          "text.slim": "slim",
          "text.html.liquid": "liquid",
          "source.css": "css",
          "source.css.scss": "scss",
          "source.css.less": "less",
          "source.css.postcss": "vue-postcss",
          "source.css.sugarss": "vue-sugarss",
          "source.sass": "sass",
          "source.stylus": "stylus",
          "source.js": "javascript",
          "source.ts": "typescript",
          "source.coffee": "coffeescript",
          "text.html.markdown": "md",
          "source.yaml": "yaml",
          "source.json": "json",
          "source.php": "php",
          "source.graphql": "graphql"
        }
      },
      {
        "language": "esjs",
        "scopeName": "source.esjs",
        "path": "./syntaxes/esjs.tmLanguage.json"
      }
    ],
    "semanticTokenScopes": [
      {
        "language": "esjs",
        "scopes": {
          "variable": [
            "variable.language.esjs"
          ],
          "variable.readonly": [
            "constant.language.esjs"
          ],
          "function.defaultLibrary": [
            "support.function.esjs"
          ]
        }
      }
    ],
    "snippets": [
      {
        "language": "esjs",
        "path": "./snippets/esjs.code-snippets.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "EsJS configuration",
      "properties": {
        "esjs.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "esjs.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  }
}
